{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2015", "dom"],
    "types": [
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "public/dist"
  ]
}
